{
	"name": "svelte-simple-form",
	"version": "0.2.5",
	"license": "MIT",
	"homepage": "https://svelte-simple-form.harryhdt.dev",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/harryhdt/svelte-simple-form.git"
	},
	"keywords": [
		"sveltekit",
		"svelte",
		"zod",
		"form",
		"validation",
		"typescript",
		"svelte-form",
		"zod-form",
		"ssf",
		"svelte-simple-form"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build-package": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.9",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/vite": "^4.0.0",
		"eslint": "^9.27.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.0",
		"globals": "^16.2.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.12",
		"svelte": "^5.33.6",
		"svelte-check": "^4.2.1",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.0",
		"vite": "^6.3.5",
		"@lucide/svelte": "^0.513.0",
		"shiki-code-block-svelte": "^0.0.3-beta.2"
	},
	"dependencies": {
		"zod": "^3.25.34"
	}
}
